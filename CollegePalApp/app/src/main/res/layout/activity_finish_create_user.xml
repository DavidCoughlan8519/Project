<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.google.collegepalapp.FinishCreateUserActivity">

    <AutoCompleteTextView
        android:id="@+id/editTextUsernameCreate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="242dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_username"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editTextPasswordCreate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editTextUsernameCreate"
        android:layout_below="@+id/editTextUsernameCreate"
        android:layout_marginTop="33dp"
        android:background="#11000000"
        android:ems="10"
        android:textSize="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_action_password"
        />

    <EditText
        android:id="@+id/editTextPasswordConfirm"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editTextPasswordCreate"
        android:layout_below="@+id/editTextPasswordCreate"
        android:layout_marginTop="33dp"
        android:background="#11000000"
        android:ems="10"
        android:textSize="16dp"
        android:hint="Password Confirm"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_action_password"
        />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextPasswordConfirm"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_marginTop="63dp"
        android:id="@+id/cardView2">
            <RelativeLayout
                android:id="@+id/finishBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textViewFinishBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Finish Sign Up"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
